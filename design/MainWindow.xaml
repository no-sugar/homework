<Window x:Class="design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:design"
        mc:Ignorable="d"
        Title="通讯录管理" Height="350" Width="525">
    <Window.Resources>
        <RoutedCommand x:Key="menu" ></RoutedCommand>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource menu}" Executed="Onmenu" CanExecute="OnCanmenu"></CommandBinding> 
    </Window.CommandBindings>
    <Grid>
        <StackPanel>
            <Button Content="按钮" Width="50" Command="{StaticResource menu}" Margin="116.75,0,350.25,0"/>
           
           
        </StackPanel>
    </Grid>
</Window>
